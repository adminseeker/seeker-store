                                    sed -i "s+ghcr.io/adminseeker/auth-service.*+ghcr.io/adminseeker/auth-service:$BUILD_NUMBER+g" kubernetes/dev/services/authservice.yml
                                    git add kubernetes/dev/services/authservice.yml
                                    git commit -m "Updated auth-service image to version ${BUILD_NUMBER}"
                                    git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/$GIT_USER_NAME/$GIT_REPO_NAME HEAD:dev
                                '''
                            }
                        }
                    }
                }
                stage("product-service build"){
                    when { changeset "product-service/**" }
